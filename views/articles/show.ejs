<h1><%= article.title %> <small>by <%= article.author.getFullName() %></small></h1>

<p>
  <strong><%= moment(article.createdAt).calendar() %></strong>
</p>

<p><%= article.content %></p>

<hr />

<h3>Comments</h3>
<% comments.forEach(comment => { %>
<p><b><%= comment.name %></b> said:
<p><%= comment.content %></p>
<% }); %>

  <h4>Comment on this post:</h4>

  <form action="/articles/:id/comments" method:="POST">
    <div class="form-group">
      <input type="hidden" name="articleId" id="<%= article.id %> ">
    <p><strong><label for="name">Name</label></strong></p>
    <input type="text" class= "form-control" name="name" id="name">
  </div>
  <div class="form-group">
    <p><strong><label for="content">Content</label></strong></p>
    <input type="text" class="form-control" name="content" id="content">
  </div>
    <input type="button" value="Submit">
  </form>

<a href="/">&larr; Back Home</a>
